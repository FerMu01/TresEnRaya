<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:background="#0D0D0D"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Seleccione La Dificultad"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="30dp"/>
    <Button
            android:text="Facil"
            android:textColor="@color/white"
            android:backgroundTint="#BF0404"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnFacil"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/btnMedio"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="50dp"/>
    <Button
            android:text="Medio"
            android:textColor="@color/white"
            android:backgroundTint="#BF0404"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnMedio"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="50dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Dificil"
            android:textColor="@color/white"
            android:backgroundTint="#BF0404"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnDificil"
            app:layout_constraintStart_toEndOf="@+id/btnMedio" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="50dp"/>
    <TextView
            android:text="Â¿Quien Empieza?"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnMedio" android:layout_marginTop="65dp"/>
    <Button
            android:text="Yo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnYo"
            android:textColor="@color/white"
            android:backgroundTint="#BF0404"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnCpu"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="50dp"/>
    <Button
            android:text="CPU"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCpu"
            android:backgroundTint="#BF0404"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="50dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Al Azar"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:backgroundTint="#BF0404"
            android:layout_height="wrap_content" android:id="@+id/btnAzar"
            app:layout_constraintStart_toEndOf="@+id/btnCpu" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="50dp"/>
    <TextView
            android:text="Elige Tu Icono Para Jugar"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCpu" android:layout_marginTop="60dp"/>
    <Button
            android:text="X"
            android:textColor="@color/white"
            android:backgroundTint="#BF0404"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnEquis"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="80dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="50dp"/>
    <Button
            android:text="O"
            android:textColor="@color/white"
            android:backgroundTint="#BF0404"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnRedondo"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="50dp"/>
    <Button
            android:text="Jugar"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="#730202"
            android:layout_height="wrap_content" android:id="@+id/button9"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="70dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>